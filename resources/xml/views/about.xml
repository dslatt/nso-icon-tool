<brls:Box
    width="auto"
    title="@i18n/app/settings/toggles/about"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        axis="column"
        alignItems="stretch"
        scrollingBehavior="centered"
        grow="1.0" >
        
        <brls:Box
            width="10000"
            height="auto"
            axis="column"
            alignItems="stretch"
            paddingTop="@style/brls/sidebar/padding_top"
            paddingRight="@style/brls/sidebar/padding_right"
            paddingBottom="@style/brls/sidebar/padding_bottom"
            paddingLeft="@style/brls/sidebar/padding_left">

            <brls:Header
                width="auto"
                height="auto"
                title="@i18n/app/settings/version/label"
                marginTop="10px"
                marginBottom="10px" />

            <brls:Label
                width="auto"
                height="auto"
                id="version"
                marginBottom="10px" />
            <brls:Label
                width="auto"
                height="auto"
                id="author"
                marginBottom="10px" />
            <brls:Label
                width="auto"
                height="auto"
                id="git_sha"
                marginBottom="10px" />
            <brls:Label
                width="auto"
                height="auto"
                id="git_date"
                marginBottom="10px" />

            <brls:Header
                width="auto"
                height="auto"
                title="@i18n/app/settings/thanks_label"
                marginTop="10px"
                marginBottom="10px" />

            <brls:Label
                width="auto"
                height="auto"
                text="@i18n/app/settings/thanks"
                marginBottom="10px" />

        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>
