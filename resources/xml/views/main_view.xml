<brls:Box
  width="auto"
  height="auto"
  axis="row">

  <brls:Box
    width="30%"
    height="auto"
    axis="column"
    alignItems="stretch"
    justifyContent="center"
    paddingLeft="50px"
    paddingRight="20px">
    <brls:Box
      width="auto"
      height="auto"
      alignItems="center"
      axis="column"
      justifyContent="center">
      <brls:Label
        width="auto"
        height="auto"
        id="current_user"
        fontSize="26"
        marginBottom="20px" />

      <brls:Image
        id="current_image"
        width="230px"
        height="230px"
        borderThickness="5"
        cornerRadius="5"
        borderColor="@theme/brls/applet_frame/separator"
        marginBottom="5px" />
    </brls:Box>

    <brls:Header
      height="auto"
      width="auto"
      title="@i18n/app/main/config" />
    <brls:DetailCell
      id="btn_change_user"
      title="@i18n/app/main/change_user"
      lineTop="1px"
    />
    <brls:DetailCell
      id="btn_settings"
      title="@i18n/app/main/settings"
    />

  </brls:Box>

  <brls:Box
    width="30%"
    height="auto"
    axis="column"
    alignItems="stretch"
    justifyContent="center"
    paddingLeft="20px"
    paddingRight="20px">
    <brls:Header
      height="auto"
      width="auto"
      title="@i18n/app/main/icon_components" />
    <brls:DetailCell
      id="btn_frame"
      title="@i18n/app/main/frame"
    />
    <brls:DetailCell
      id="btn_character"
      title="@i18n/app/main/character"
    />
    <brls:DetailCell
      id="btn_background"
      title="@i18n/app/main/background"
    />

    <brls:Header
      title="@i18n/app/main/other"
      marginTop="30px"/>

    <brls:DetailCell
      id="btn_custom"
      title="@i18n/app/main/custom_image"/>
    <brls:DetailCell
      id="btn_collection_load"
      title="@i18n/app/main/collection_load"/>
  </brls:Box>

  <brls:Box
    width="40%"
    height="auto"
    justifyContent="flexStart"
    alignItems="center"
    axis="column"
    paddingTop="60px">

    <brls:Label
      width="auto"
      height="auto"
      text="@i18n/app/main/new_icon"
      fontSize="26"
      marginBottom="20px" />

    <brls:Image
      id="image"
      width="340px"
      height="340px"
      borderThickness="5px"
      cornerRadius="5px"
      borderColor="@theme/brls/applet_frame/separator" />


    <brls:Button
      id="btn_save"
      width="75%"
      height="auto"
      style="primary"
      text="@i18n/app/main/apply"
      marginTop="20px" />
  </brls:Box>

</brls:Box>